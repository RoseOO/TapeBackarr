{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "static_dir": "/opt/tapebackarr/static"
  },
  "database": {
    "path": "/var/lib/tapebackarr/tapebackarr.db"
  },
  "tape": {
    "default_device": "/dev/nst0",
    "drives": [
      {
        "device_path": "/dev/nst0",
        "display_name": "Primary LTO Drive",
        "enabled": true
      },
      {
        "device_path": "/dev/nst1",
        "display_name": "Secondary LTO Drive",
        "enabled": false
      }
    ],
    "buffer_size_mb": 2048,
    "block_size": 1048576,
    "write_retries": 3,
    "verify_after_write": true
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output_path": "/var/log/tapebackarr/tapebackarr.log"
  },
  "auth": {
    "jwt_secret": "CHANGE_THIS_TO_A_SECURE_RANDOM_STRING",
    "token_expiration": 24,
    "session_timeout": 60
  },
  "notifications": {
    "telegram": {
      "enabled": false,
      "bot_token": "YOUR_TELEGRAM_BOT_TOKEN",
      "chat_id": "YOUR_TELEGRAM_CHAT_ID"
    },
    "email": {
      "enabled": false,
      "smtp_host": "smtp.example.com",
      "smtp_port": 587,
      "username": "your-smtp-username",
      "password": "your-smtp-password",
      "from_email": "tapebackarr@example.com",
      "from_name": "TapeBackarr",
      "to_emails": "admin@example.com, operator@example.com",
      "use_tls": true,
      "skip_verify": false
    }
  },
  "proxmox": {
    "enabled": false,
    "host": "YOUR_PROXMOX_HOST_OR_IP",
    "port": 8006,
    "skip_tls_verify": true,
    "username": "",
    "password": "",
    "realm": "pam",
    "token_id": "root@pam!tapebackarr",
    "token_secret": "YOUR_API_TOKEN_SECRET",
    "default_mode": "snapshot",
    "default_compress": "zstd",
    "temp_dir": "/var/lib/tapebackarr/proxmox-tmp"
  }
}
